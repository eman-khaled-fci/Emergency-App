<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="20dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/emergency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:text="@string/emergency"
        android:textColor="@color/Red"
        android:textSize="32dp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.037">

        ></TextView>

    <Button
        android:onClick="doFire"
        android:id="@+id/btn_fire"
        android:layout_width="105dp"
        android:layout_height="94dp"

        android:layout_margin="20dp"
        android:background="@drawable/fire"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.65"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintStart_toStartOf="@id/emergency"

        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintVertical_bias="0.257">
        ></Button>

    <TextView
        android:id="@+id/tv_fire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/fire"
        android:textColor="@color/Red"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.726"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_fire"></TextView>

    <Button
        android:onClick="doHealth"
        android:id="@+id/btn_ambulance"

        android:layout_width="105dp"

        android:layout_height="94dp"

        android:layout_marginStart="108dp"
        android:layout_marginLeft="108dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/health"

        app:layout_constraintHorizontal_bias="0.637"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@id/emergency"
        app:layout_constraintTop_toBottomOf="@id/tv_fire"></Button>

    <TextView
        android:id="@+id/tv_ambulance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="112dp"
        android:layout_marginLeft="112dp"
        android:layout_marginTop="12dp"
        android:text="@string/ambulance"
        android:textColor="@color/Red"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.845"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@id/emergency"
        app:layout_constraintTop_toBottomOf="@id/btn_ambulance"
        app:layout_constraintVertical_bias="0.0"></TextView>

    <Button
        android:onClick="doPolice"
        android:id="@+id/btn_police"
        android:layout_width="105dp"
        android:layout_height="94dp"
        android:background="@drawable/police2"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintHorizontal_bias="0.404"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btn_fire"
        app:layout_constraintTop_toBottomOf="@id/emergency"
        app:layout_constraintVertical_bias="0.159"></Button>

    <TextView
        android:id="@+id/tv_police"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/police"
        android:textColor="@color/Red"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.346"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_fire"
        app:layout_constraintTop_toBottomOf="@id/btn_police"
        app:layout_constraintVertical_bias="0.024"></TextView>

    <Button
        android:onClick="doChild"
        android:id="@+id/btn_baby_secure"
        android:layout_width="105dp"
        android:layout_height="94dp"
        android:layout_marginTop="39dp"
        android:background="@drawable/child_secure"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.424"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btn_ambulance"
        app:layout_constraintTop_toBottomOf="@id/btn_police"
        app:layout_constraintVertical_bias="0.171"></Button>

    <TextView
        android:id="@+id/tv_baby_secure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/child_rescue"
        android:textColor="@color/Red"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.297"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_ambulance"
        app:layout_constraintTop_toBottomOf="@id/btn_baby_secure"
        app:layout_constraintVertical_bias="0.05"></TextView>

    <Button
        android:onClick="doConsumer"
        android:id="@+id/btn_consumer_security"
        android:layout_width="105dp"
        android:layout_height="94dp"
        android:background="@drawable/consumer_protection"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/emergency"
        app:layout_constraintVertical_bias="0.898"></Button>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/consumer_protection"
        android:textColor="@color/Red"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_consumer_security"
        app:layout_constraintVertical_bias="0.217"></TextView>
</androidx.constraintlayout.widget.ConstraintLayout>